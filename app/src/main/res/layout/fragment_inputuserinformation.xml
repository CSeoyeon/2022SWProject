<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/inputUserInformation_imgBtn_setIcon"
        android:layout_width="112dp"
        android:layout_height="106dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/navigation_user"
        app:layout_constraintEnd_toEndOf="@+id/inputUserInformation_tv_imgIconTV"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="@+id/inputUserInformation_tv_imgIconTV"
        app:layout_constraintTop_toBottomOf="@+id/inputUserInformation_tv_imgIconTV"
        tools:src="@drawable/navigation_user"
        tools:srcCompat="@drawable/navigation_user" />

    <Button
        android:id="@+id/inputUserInformation_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputUserInformation_et_phoneNumber"
        app:layout_constraintVertical_bias="0.137" />

    <TextView
        android:id="@+id/inputUserInformation_tv_email"
        android:layout_width="220dp"
        android:layout_height="19dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/inputUserInformation_imgBtn_setIcon"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="@+id/inputUserInformation_imgBtn_setIcon"
        app:layout_constraintTop_toBottomOf="@+id/inputUserInformation_imgBtn_setIcon" />

    <TextView
        android:id="@+id/inputUserInformation_tv_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="12dp"
        android:text="이메일"
        app:layout_constraintEnd_toStartOf="@+id/inputUserInformation_imgBtn_setIcon"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputUserInformation_imgBtn_setIcon" />

    <EditText
        android:id="@+id/inputUserInformation_et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/inputUserInformation_tv_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputUserInformation_tv_email"
        app:layout_constraintTop_toBottomOf="@+id/inputUserInformation_tv_email" />

    <EditText
        android:id="@+id/inputUserInformation_et_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/inputUserInformation_et_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputUserInformation_et_name"
        app:layout_constraintTop_toBottomOf="@+id/inputUserInformation_et_name" />

    <TextView
        android:id="@+id/inputUserInformation_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="이름"
        app:layout_constraintEnd_toEndOf="@+id/inputUserInformation_tv_e"
        app:layout_constraintStart_toStartOf="@+id/inputUserInformation_tv_e"
        app:layout_constraintTop_toBottomOf="@+id/inputUserInformation_tv_e" />

    <TextView
        android:id="@+id/inputUserInformation_tv_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="전화번호"
        app:layout_constraintEnd_toEndOf="@+id/inputUserInformation_tv_name"
        app:layout_constraintHorizontal_bias="0.269"
        app:layout_constraintStart_toStartOf="@+id/inputUserInformation_tv_name"
        app:layout_constraintTop_toBottomOf="@+id/inputUserInformation_tv_name" />

    <TextView
        android:id="@+id/inputUserInformation_tv_imgIconTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 사진을 추가해주세요"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

</androidx.constraintlayout.widget.ConstraintLayout>